</header>
     <div class="container-admin">
        <section class="all-admin-manage">
            <div class="nav-menu">
                <ul>
                @foreach(var item  in arr_menu){
                    <li>
                        <a asp-controller="@item.controller" asp-action="@item.action">@item.name</a>
                    </li>
                }     
                </ul>
                <div class="close-admenu"></div>
            </div>
            <div class="content-admin">
